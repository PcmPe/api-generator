generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  id           Int     @id @default(autoincrement())
  name         String  @db.VarChar(155)
  email        String  @db.VarChar(255)
  pwd          String  @db.VarChar(255)
  refreshToken String? @db.VarChar(255)

  @@map("usuarios")
}

model produto {
  id           Int           @id @default(autoincrement())
  nome         String        @db.VarChar(100)
  descricao    String?       @db.VarChar(100)
  preco        String        @db.VarChar(100)
  ingredientes ingrediente[]

  @@map("produtos")
}

model ingrediente {
  id         Int      @id @default(autoincrement())
  nome       String   @db.VarChar(100)
  produto_id Int?
  frutas     produto? @relation(fields: [produto_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ingredientes_ibfk_1")

  @@index([produto_id], map: "produto_id")
  @@map("ingredientes")
}
